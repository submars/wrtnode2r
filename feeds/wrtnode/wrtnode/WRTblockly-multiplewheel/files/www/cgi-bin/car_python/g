    return(result)
print "Content-Type: application/json\n"  
ser = serial.Serial("/dev/ttyS0", 57600, timeout=0.02)
ser.open()
form = cgi.FieldStorage()
if form.has_key("value"):
	value=form["value"].value
	value=int(value)
else:
	value=-80
if value>0:
	value1="%d"%value
	lenght=len(value1)+1
	sel="$M<"+chr(lenght)+"u"+value1+"\x00"
	chechnum=getcheck(sel)
	sel=sel+str(chechnum)
	ser.write(sel)
else:
	value=-value
	value1="%d"%value
	lenght=len(value1)+1
	sel="$M<"+chr(lenght)+"d"+value1+"\x00"	
	chechnum=getcheck(sel)
	sel=sel+str(chechnum)
	ser.write(sel)	
ser.close
